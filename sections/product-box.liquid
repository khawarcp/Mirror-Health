<section class="in-box">
    <div class="container">
        <div class="in-box-cntnt">
            {% if section.settings.heading != blank %}
                <h2> {{ section.settings.heading }} </h2>                
            {% endif %}
            <div class="in-box-images">
                <div class="product-accessories">
                    <div class="product-accessoriesBox">
                        {% liquid
                            if product.selected_or_first_available_variant.metafields.custom.ring_hero_image != blank
                              assign variant_box_image  = product.selected_or_first_available_variant.metafields.custom.ring_hero_image |  image_url
                            else
                              assign variant_box_image  = section.settings.image |  image_url
                            endif
                        %}
                        <img id="variant-box-image" src="{{ variant_box_image }}" alt="{{ variant_box_image.alt }}" height="" width="1320" loading="eager">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Product Box",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "What's in the box"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ]
    }
{% endschema %}